{
  "name": "@use-tusk/drift-mcp",
  "version": "0.1.0",
  "description": "MCP server for querying Tusk Drift API traffic data",
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "drift-mcp": "dist/index.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
