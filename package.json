{
  "name": "@use-tusk/drift-mcp",
  "version": "0.1.1",
  "description": "MCP server for querying Tusk Drift API traffic data",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": {
        "import": "./dist/server.d.mts",
        "require": "./dist/server.d.cts"
      },
      "import": "./dist/server.mjs",
      "require": "./dist/server.cjs"
    },
    "./provider": {
      "types": {
        "import": "./dist/provider.d.mts",
        "require": "./dist/provider.d.cts"
      },
      "import": "./dist/provider.mjs",
      "require": "./dist/provider.cjs"
    },
    "./http": {
      "types": {
        "import": "./dist/http.d.mts",
        "require": "./dist/http.d.cts"
      },
      "import": "./dist/http.mjs",
      "require": "./dist/http.cjs"
    }
  },
  "bin": {
    "drift-mcp": "dist/index.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "tusk",
    "drift",
    "api-traffic",
    "observability"
  ],
  "author": "Tusk",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "tsdown": "^0.17.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ]
}
